{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "messenger",
  "engines": {
    "node": ">=16.16.0"
  },
  "scripts": {
    "dev": "npx webpack serve --config webpack.dev.js",
    "build": "npx rimraf dist/* && webpack --config webpack.prod.js",
    "start": "npm run build && node server/index.js",
    "test": "mocha",
    "check-ts": "tsc --noEmit",
    "check-linter": "eslint --ext .ts ./src",
    "check-styles": "npx stylelint \"**/*.css\"",
    "check-all": "npm run check-ts && npm run check-linter && npm run check-styles && npm test",
    "push-docker-heroku": "npx heroku container:push web && heroku container:release web",
    "heroku-deploy": "npm run build && npm run push-docker-heroku",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint",
    "*.css": "stylelint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moumouseque/middle.messenger.praktikum.yandex.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moumouseque/middle.messenger.praktikum.yandex/issues"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/jsdom": "20.0.0",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.15",
    "@types/sinon": "10.0.13",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "eslint": "8.20.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "express": "4.18.1",
    "handlebars-loader": "1.7.2",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jsdom": "20.0.0",
    "lint-staged": "13.0.3",
    "mini-css-extract-plugin": "2.6.1",
    "mocha": "10.0.0",
    "postcss": "8.4.16",
    "postcss-custom-properties": "12.1.8",
    "postcss-import": "15.0.0",
    "postcss-loader": "7.0.1",
    "postcss-nested": "5.0.6",
    "postcss-url": "10.1.3",
    "rimraf": "3.0.2",
    "sinon": "14.0.0",
    "stylelint": "14.11.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-selector-bem-pattern": "2.1.1",
    "terser-webpack-plugin": "5.3.6",
    "timers-browserify": "2.0.12",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.10.1",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "handlebars": "4.7.7",
    "uuid": "9.0.0"
  }
}
